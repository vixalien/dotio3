---
import PrettyDate from "./PrettyDate.astro";

export type DateFormat = (date: Date) => string;

interface Props {
  title: string | null;
}

const { title, ...props } = Astro.props;
---

<div class="mt-12 mb-5 flex flex-col gap-2 items-start">
  <slot name="prefix" />
  <h1 {...props}>{title}</h1>
  <slot name="suffix" />
</div>
