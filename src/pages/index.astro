---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Intro from "../components/Intro.astro";
import Welcome from "../components/Welcome.astro";
import PostsIndex from "../components/PostsIndex.astro";
import ContactLinks from "../components/ContactLinks.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main class="container">
			<Intro title={SITE_TITLE} />
			<Welcome>
				Hello! I'm Angelo Verlain, but you can call me vixalien. I am a web and
				GTK developer and this is my website, a collection of projects and
				writings.
			</Welcome>
			<h2>Posts</h2>
			<PostsIndex />
			<h2>Contact & Links</h2>
			<ContactLinks />
			<footer>
				&copy; Angelo Verlain {new Date().getFullYear()}
			</footer>
		</main>
	</body>
</html>
